# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/ueorms_db?schema=public"

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5174

# SMTP Email Configuration (Required for Email Reports Feature)
# For Gmail: Use App Password (not your regular Gmail password)
# Steps to get Gmail App Password:
# 1. Go to Google Account → Security
# 2. Enable 2-Factor Authentication
# 3. Go to Security → App Passwords
# 4. Select "Mail" and your device
# 5. Copy the 16-character password generated
# 6. Use that password as SMTP_PASS below

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM=no-reply@yourcompany.com

# Alternative: Use a different SMTP service
# For Outlook: smtp.office365.com, port 587
# For Yahoo: smtp.mail.yahoo.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587 (use API key as password)
# For Mailgun: smtp.mailgun.org, port 587

# Leave blank to disable email features
# SMTP_USER=
# SMTP_PASS=

# Subscription Configuration
# Default plan assigned to new tenants on registration
# Available plans: 
#   - "Starter Monthly" (includes core modules)
#   - "Starter Yearly" (includes core modules)
#   - "Growth Monthly" (includes standard modules)
#   - "Growth Yearly" (includes standard modules)
#   - "Enterprise Monthly" (all modules)
#   - "Enterprise Yearly" (all modules)
DEFAULT_PLAN="Starter Monthly"

# Custom Plan Pricing (test default)
# Used when registering a tenant with a custom module selection
CUSTOM_MODULE_TEST_PRICE=10

# Billing Provider Configuration
# Choose either Stripe or Razorpay (or both if you want to support both)

# Pending registration expiry window (hours)
PENDING_REGISTRATION_TTL_HOURS=24

# === Stripe Configuration (for Global) ===
# Get your API keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxx  # or pk_test_xxxxx for testing
STRIPE_SECRET_KEY=sk_live_xxxxxx       # or sk_test_xxxxx for testing

# Stripe Price IDs - Create prices in Stripe Dashboard and map them here
# Format: price_xxxxx (can be found at https://dashboard.stripe.com/products)
STRIPE_PRICE_STARTER_MONTHLY=price_xxxxx
STRIPE_PRICE_STARTER_YEARLY=price_xxxxx
STRIPE_PRICE_GROWTH_MONTHLY=price_xxxxx
STRIPE_PRICE_GROWTH_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxxxx

# Stripe Webhook Secret - Found at https://dashboard.stripe.com/webhooks
# This is used to verify webhook requests from Stripe
STRIPE_WEBHOOK_SECRET=whsec_xxxxxx

# === Razorpay Configuration (for India and other supported countries) ===
# Get your API keys from https://dashboard.razorpay.com/app/settings/api-keys
RAZORPAY_KEY_ID=rzp_live_xxxxxx     # or rzp_test_xxxxx for testing
RAZORPAY_KEY_SECRET=xxxxxxxxxx

# Razorpay Webhook Token - Configure at https://dashboard.razorpay.com/app/webhooks
# This is the secret used to verify webhook signatures
RAZORPAY_WEBHOOK_TOKEN=webhook_token_xxxxx
